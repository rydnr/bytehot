{
  "name": "bytehot",
  "displayName": "ByteHot",
  "description": "Live coding with instant hot-swapping for Java applications",
  "version": "1.0.0",
  "publisher": "acmsl",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other",
    "Debuggers",
    "Programming Languages"
  ],
  "keywords": [
    "java",
    "hot-swap",
    "live-coding",
    "development",
    "reload"
  ],
  "activationEvents": [
    "onLanguage:java",
    "workspaceContains:**/*.java",
    "workspaceContains:pom.xml",
    "workspaceContains:build.gradle"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "bytehot.startLiveMode",
        "title": "Start Live Mode",
        "category": "ByteHot",
        "icon": "$(play)"
      },
      {
        "command": "bytehot.stopLiveMode",
        "title": "Stop Live Mode",
        "category": "ByteHot",
        "icon": "$(debug-stop)"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "bytehot.startLiveMode",
          "when": "explorerResourceIsFolder && resourceFilename == src",
          "group": "ByteHot"
        }
      ],
      "editor/title": [
        {
          "command": "bytehot.startLiveMode",
          "when": "resourceExtname == .java",
          "group": "navigation@1"
        },
        {
          "command": "bytehot.stopLiveMode",
          "when": "resourceExtname == .java",
          "group": "navigation@2"
        }
      ],
      "commandPalette": [
        {
          "command": "bytehot.startLiveMode",
          "when": "workspaceContains:**/*.java"
        },
        {
          "command": "bytehot.stopLiveMode",
          "when": "workspaceContains:**/*.java"
        }
      ]
    },
    "configuration": {
      "title": "ByteHot",
      "properties": {
        "bytehot.enableAutoDetection": {
          "type": "boolean",
          "default": true,
          "description": "Automatically detect main class and project configuration"
        },
        "bytehot.mainClass": {
          "type": "string",
          "default": "",
          "description": "Override main class for live mode (leave empty for auto-detection)"
        },
        "bytehot.jvmArgs": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "Additional JVM arguments for live mode"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.60.0",
    "@types/node": "14.x",
    "typescript": "^4.4.0"
  },
  "dependencies": {},
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/rydnr/bytehot.git"
  },
  "bugs": {
    "url": "https://github.com/rydnr/bytehot/issues"
  },
  "homepage": "https://github.com/rydnr/bytehot#readme"
}